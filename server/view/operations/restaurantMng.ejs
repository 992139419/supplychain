<body>
<div id="wrapper">
    <% include template/menu.ejs %>

    <div id="page-wrapper" class="gray-bg dashbard-1">
        <% include template/nav.ejs %>
        <div class="row  border-bottom white-bg dashboard-header">
            <div class="col-sm-12">
                <div class="row">

                </div>
                <div class="row">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>当前餐厅列表</h5>
                        </div>
                        <form role="form" class="form-inline" method="get"
                              action="/cmsGetRestaurant?name=<%= name %>&startIdx=<%= parseInt(currentIdx - 1) * 10 %>">
                            <div class="form-group"><label for="exampleInputEmail2" class="sr-only">餐厅名称</label>
                                <label class="font-noraml">餐厅名称</label>
                                <input type="text" placeholder="餐厅名称" id="name" class="form-control" name="name"
                                       value="<%= name %>"></div>
                            <div class="checkbox m-l m-r-xs"></div>
                            <div class="form-group">
                                <label class="font-noraml">餐厅状态</label>
                                <select class="form-control " name="isAvab">
                                    <option value=""  <%= isAvab===''?'selected':'' %> >全部</option>
                                    <option value="0" <%= isAvab==='0'?'selected':'' %>>禁用</option>
                                    <option value="1" <%= isAvab==='1'?'selected':'' %>>正常</option>
                                </select>
                            </div>
                            <div class="checkbox m-l m-r-xs"></div>
                            <button class="btn btn-danger" type="submit">查询</button>
                        </form>
                        <br/>
                        <br/>

                        <div class="ibox-content">

                            <table class="table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th width="30%">餐厅名称</th>
                                    <th width="30%">餐厅识别码</th>
                                    <th width="20%">时间</th>
                                    <th width="20%">操作</th>
                                </tr>
                                </thead>
                                <tbody>
                                <%
                                for(var i = 0;i < data.length;i++, startIdx++){ %>
                                <tr>
                                    <td><%= startIdx %></td>
                                    <td data-toggle="modal" data-target="#myModal"><a
                                                href="javascript:showRest('<%= data[i]._id %>')"> <%= data[i].name %></a>
                                    </td>
                                    <td><%= data[i]._id %></td>
                                    <td><%= data[i].createdAt %></td>
                                    <td>

                                        <% if(data[i].isAvab == 'false'){ %>
                                        <a href="javascript:enbUser('<%= data[i]._id %>')"
                                           class="btn btn-sm btn-primary pull-right m-t-n-xs">激活</a>
                                        <% }else { %>

                                        <a href="javascript:disUser('<%= data[i]._id %>')"
                                           style="  background-color: #ed5565;border-color: #ed5565;"
                                           class="btn btn-sm btn-primary pull-right m-t-n-xs">禁用</a></td>
                                    <% } %>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                            <div id="pageIdx" class="pagination">
                                <% var pageNum = sum / 10; %>
                                <span style="float: left; line-height: 28px;">共有 <%= sum %> 条记录　</span>
                                <% if(parseInt(sum) > 10){ %>
                                <% if(currentIdx > 1){ %>
                                <a href="/cmsGetRestaurant?name=<%= name %>&isAvab=<%= isAvab %>" class="pagination-q"
                                   style="width:4rem">首页</a>
                                <a href="/cmsGetRestaurant?name=<%= name %>&isAvab=<%= isAvab %>&startIdx=<%= parseInt(currentIdx - 2) * 10 %>"
                                   class="pagination-q"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>上一页</a>
                                <% } %>
                                <span style="float: left; line-height: 28px;padding: 0 0.5rem"> 第 <%= currentIdx %>
                                    页 </span>
                                <% if(parseInt(currentIdx * 10) < sum + 1){ %>
                                <a href="/cmsGetRestaurant?name=<%= name %>&isAvab=<%= isAvab %>&startIdx=<%= currentIdx * 10 %>"
                                   class="pagination-q">下一页
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a>
                                <% } %>
                                <% if(pageNum > 10){ %>
                                <span style="float: left; line-height: 28px;">... 共有 <%= Math.ceil(pageNum) %> 页
                                <span>跳转到</span>
                                <input id="pageSkippedTo" type="Number" min="1" style="width:4rem; height:28px;"/>
                                <span>页</span>
                                <a class="btn btn-default" onclick="skipHandler()"
                                   href="javascript:void(0)" role="button" style="float:right;height:28px;">
                                    <span style="position: relative; top: -8px;">go</span></a>
                            </span>
                                <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog " style="width: 80%!important;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">餐厅信息</h4>

                <div style="width: 100%; height: 2px;margin-top: 10px; background-color: #F8F8F8"></div>
                <div class="modal-body">
                    <div style=" width: 100%;border-radius: 5px">
                        <div style="width: 100%;padding: 10px 10px; border-bottom: 1px solid #F8F8F8">
                            <div style="clear: both;width: 100%"></div>
                            餐厅名字：<span id="name_modal"></span><br>
                            地&nbsp;&nbsp;址：<span id="add_modal"></span><br>
                            联系方式：<span id="phone_modal"></span><br>
                            区域：<span id="area_modal"></span><br>
                        </div>
                        <div style="width: 100%;padding: 10px 10px; border-bottom: 1px solid #F8F8F8">
                            <span><h4>分店信息</h4></span>
                            <br>

                            <div id='chainStoreList' style="clear: both;width: 100%">
                            </div>
                        </div>


                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <!--<button type="button" class="btn btn-primary">Save changes</button>-->
            </div>
        </div>
    </div>
</div>

