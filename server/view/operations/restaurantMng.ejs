<script>
    function skipHandler() {
        var nextPage = $('#pageSkippedTo').val();
        if ($.trim(nextPage) == '') {
            return;
        }
        nextPage = parseInt(nextPage);
        if (!isNaN(nextPage)) {
            if (nextPage <= parseInt(<%=Math.ceil(pageNum)%>)) {
                window.location.href = '/cmsGetRestaurant?name=<%=name%>&isAvab=<%= isAvab %>&startIdx=' + ((nextPage - 1) * 10);
            }
        }
    }

    function disUser(id) {
        $.post('/cmsDelRestruant', {id: id, isAvab: false}, function (data) {
            if (data.status == 100) {
                alert('操作成功');
                window.location.reload();
            }
        });
    }

    function enbUser(id) {
        $.post('/cmsDelRestruant', {id: id, isAvab: true}, function (data) {
            if (data.status == 100) {
                alert('操作成功');
                window.location.reload();
            }
        });
    }

    function showRest(id) {

        $.post('/cmsGetResDetails', {id: id}, function (data) {
            if (data) {
                $("#name_modal").text(data.name);
                $("#add_modal").text(data.address);
                $("#phone_modal").text(data.telephone);
                $("#area_modal").text(data.area);
                $("#chainStoreList").html('');
                for (var i = 0; i < data.chainStores.length; i++) {
                    var obj = data.chainStores[i];
                    $("#chainStoreList").append("餐厅名字：<span>" + obj.name + "</span><br>");
                    $("#chainStoreList").append("地&nbsp;&nbsp;址：<span>" + obj.address + "</span><br>");
                    $("#chainStoreList").append("联系方式：<span >" + obj.telephone + "</span><br>");
                    $("#chainStoreList").append("区域：<span>" + obj.area + "</span>");
                    $("#chainStoreList").append('<hr style="height:1px;border:none;border-top:1px solid #555555;" />')
                }

                if (data.chainStores.length <= 0) {
                    $("#chainStoreList").append("无分店信息 <br>");
                }
//                $("#chainStoreList").append("<span >不开</span><br>");
//                $("#chainStoreList").append("<span >不开</span><br>");


//                $("#name").text(data.name);
//                $("#name").text(data.name);
            }
        });
    }

</script>
